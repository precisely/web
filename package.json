{
  "name": "precisely-web",
  "description": "",
  "version": "0.0.3",
  "private": true,
  "scripts": {
    "postinstall": "cd app-backend && yarn install && cd ../app-client && yarn install",
    "setup": "npm install -g serverless && nvm install v6.10.3",
    "server": "cd app-backend && yarn start",
    "client": "cd app-client && yarn start",
    "all": "yarn run server | yarn run client",
    "test": "cd app-backend && yarn test && cd ../app-client && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/precisely/web"
  },
  "dependencies": {},
  "devDependencies": {},
  "workspaces": [
    "app-backend/",
    "app-client/"
  ],
  "jest": {
    "transform": {
      "^.+\\.ts?$": "./node_modules/ts-jest/preprocessor.js",
      "\\.(gql|graphql)$": "jest-transform-graphql"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "mapCoverage": true
  }
}
