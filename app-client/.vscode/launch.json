  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "test",
      "request": "launch",
      "args": [
        "--runInBand",
        "--env=jsdom"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "smartStep": true,
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    },
    {
        "name": "Chrome",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceRoot}/src"
    }
  ]
}