{
  "compilerOptions": {
    "outDir": "build/dist",
    "experimentalDecorators": true,
    "module": "commonjs", 
    "target": "es5", 
    "lib": ["es7", "dom", "dom.iterable", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "keyofStringsOnly": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [ "src/*" ],
      "*": [ "*" ],
      "react": ["node_modules/@types/react"]
    },
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/**/*.test.*"
  ]
}
