{
  "name": "serverless-graphql-typescript",
  "description": "Boilerplate for serverless-graphql using typescript",
  "version": "0.0.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:causecode/serverless-graphql-typescript.git"
  },
  "scripts": {
    "test": "jest --no-cache --coverage",
    "start": "serverless dynamodb install && env-cmd ../config/security.env.local serverless offline start",
    "deploy-prod": "serverless --stage=production deploy"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "./node_modules/ts-jest/preprocessor.js",
      "\\.(gql|graphql)$": "jest-transform-graphql"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "mapCoverage": true
  },
  "author": "CauseCode Technologies",
  "license": "ISC",
  "dependencies": {
    "apollo-server-lambda": "1.3.2",
    "apollo-tracing": "0.0.9",
    "babel-polyfill": "6.26.0",
    "graphql": "0.10.5",
    "graphql-playground-middleware-lambda": "1.2.0",
    "graphql-tag": "^2.6.1",
    "graphql-tools": "2.7.2",
    "jest-transform-graphql": "^2.1.0",
    "serverless-dynamodb-client": "0.0.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "0.0.27",
    "@types/graphql": "0.12.1",
    "@types/node": "9.3.0",
    "aws-sdk": "2.4.8",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.1",
    "body-parser": "1.15.2",
    "cors": "2.8.4",
    "env-cmd": "5.0.0",
    "faker": "4.1.0",
    "imports-loader": "0.7.1",
    "jest": "21.2.1",
    "jsonfile": "4.0.0",
    "serverless-dynamodb-local": "0.2.26",
    "serverless-offline": "3.15.3",
    "serverless-webpack": "4.1.0",
    "ts-jest": "22.0.1",
    "ts-loader": "3.3.0",
    "typescript": "2.6.2",
    "webpack": "3.8.1",
    "webpack-graphql-loader": "0.0.23",
    "webpack-node-externals": "1.6.0"
  }
}
