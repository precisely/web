{
  "compilerOptions": {
    "outDir": "build/dist",
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": [ "src/*" ],
      "*": [ "*" ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
